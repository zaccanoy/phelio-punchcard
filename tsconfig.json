{
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["ES6"],
    "module": "ES6",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "~*": ["./*"],
      "*": ["node_modules/*"]
    },
    "sourceMap": true,
    "target": "ES5"
  },
  "include": ["src/**/*", "test/**/*"]
}
